{erl_opts, [
    debug_info,
    warn_obsolete_guards,
    warn_unused_vars,
    warn_unused_import
]}.

{lib_dir, ["deps"]}.
{deps_dir, "deps"}.

{xref_checks, [undefined_function_calls]}.

{deps, [
    {ibrowse, ".*", {git, "https://github.com/cmullaparthi/ibrowse.git", {tag, "v4.2.2"}}},
    {jsx,     ".*", {git, "https://github.com/talentdeficit/jsx.git",    {tag, "v2.7.1"}}}
]}.
